<% provide(:title, 'Article') %>
<h1>New Article</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@article) do |f| %>

      <%= render 'shared/article_error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.label :total_in_shelf %>
      <%= f.text_field :total_in_shelf %>

      <%= f.label :total_in_vault %>
      <%= f.text_field :total_in_vault %>

      <%= f.label :store %>
      <%= f.collection_select :store_id, Store.all, :id, :name, {} %>

      <%= f.submit "Create Article", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>