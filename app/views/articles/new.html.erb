<% provide(:title, 'Artículo') %>
<h1>Nuevo Artículo</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@article) do |f| %>

      <!%= render 'shared/error_messages' %>
      <%= f.label "Nombre" %>
      <%= f.text_field :name %>

      <%= f.label "Descripción" %>
      <%= f.text_field :description %>

      <%= f.label "Total en Tienda"%>
      <%= f.text_field :total_in_shelf %>

      <%= f.label "Total en Bodega" %>
      <%= f.text_field :total_in_vault %>

      <%= f.label "Tienda" %>
      <%= f.collection_select :store_id, Store.all, :id, :name, {} %>

      <%= f.submit "Crear Artículo", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>